  <% if @weather["cod"] == "200" %>
  <h2 style="font-family: 'Lobster', cursive;"><b>Weather Forecast</b></h2>
    <ul>
      <p>location: <b><%= %"#{params[:keyword]}" %></b></p>
      <% @weather["list"].each_with_index do |weather, i| %>
      <li><%= "#{(@weather["list"][i]["dt_txt"])}" %><br>
          <%= "#{(@weather["list"][i]["main"]["temp"]-273.15).round(2)}" %>â„ƒ
          <%= "#{(@weather["list"][i]["weather"][0]["main"])}" %>
